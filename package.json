{
  "name": "wallpaper-website",
  "version": "1.0.0",
  "description": "배경화면 다운로드 웹사이트",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names \"shared,backend,admin,frontend\" --prefix-colors \"blue,green,magenta,yellow\" \"npm run dev:shared\" \"npm run dev:backend\" \"npm run dev:admin\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "dev:shared": "npm run dev --workspace=shared",
    "dev:admin": "cd packages/backend && node admin-server.js",
    "build": "npm run build --workspace=shared && npm run build --workspaces --if-present",
    "build:prod": "npm run clean && npm run build",
    "start": "npm run start --workspace=packages/backend",
    "start:prod": "npm run build:prod && npm run start",
    "preview": "npm run preview --workspace=packages/frontend",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:integration": "npm run test:integration --workspace=packages/backend",
    "test:e2e": "npm run test:e2e --workspace=packages/frontend",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "clean": "npm run clean --workspaces",
    "clean:all": "npm run clean && rimraf node_modules packages/*/node_modules shared/node_modules",
    "install:all": "npm install",
    "setup": "node scripts/setup.js",
    "build:script": "node scripts/build.js",
    "dev:script": "node scripts/dev.js",
    "deploy:script": "node scripts/deploy.js",
    "generate:images": "node scripts/generate-placeholder-images.js",
    "postinstall": "npm run build --workspace=shared",
    "deploy:build": "npm run clean && npm run build",
    "deploy:frontend": "npm run build --workspace=packages/frontend",
    "deploy:backend": "npm run build --workspace=packages/backend",
    "deploy:shared": "npm run build --workspace=shared",
    "deploy:all": "npm run deploy:build && echo \"✅ 모든 프로젝트 빌드 완료!\"",
    "serve:frontend": "npm run preview --workspace=packages/frontend",
    "serve:backend": "npm run start --workspace=packages/backend",
    "serve:prod": "concurrently --kill-others-on-fail --names \"backend,frontend\" --prefix-colors \"green,yellow\" \"npm run serve:backend\" \"npm run serve:frontend\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "rimraf": "^5.0.5",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}